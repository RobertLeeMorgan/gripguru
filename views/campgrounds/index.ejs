<% layout('layouts/boilerplate') %>

<div class="map-container">
  <div id="cluster-map"></div>
</div>

<div class="container mt-3" id="campgrounds-container">
  <form action="/campgrounds" method="GET" class="mx-md-3 my-3">
    <div class="input-group input-group-lg form-inline">
      <button class="btn btn-outline-success" id="search" type="submit">Search</button>
    <input type="text" name="search" id="search" placeholder="Search for a city" class="form-control">
  </div>
  <% if(search && campgrounds.length > 10) {%>
    <h3 class="card-title m-3 text text-center">No results near <%= search.charAt(0).toUpperCase()+search.slice(1) %></h3>
    <% } %>
  </form>
  <% for(campground of altCamp.docs) { %>
  <div class="card mb-3">
    <div class="row d-flex align-items-center">
      <div class="col-md-4 text-center text-md-start mt-2 mt-md-0">
        <img
          crossorigin="anonymous"
          class="img-fluid"
          alt=""
          src="<%= campground.images[0].index %>"
        />
      </div>
      <div class="col-md-8 text-center text-md-start">
        <div class="card-body">
          <h4 class="card-title mb-2"><%= campground.title %></h4>
          <p class="card-text mb-2 me-md-5"><%= campground.description.substring(0, 140) %>...</p>
          <p class="card-text">
            <p class="text-secondary mb-4"><%= campground.location %></p>
          </p>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-success"
            >View Details</a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>
<div class="text-center mt-4">
  <a href="/campgrounds?page=<%= altCamp.nextPage %>" id="paginate" class="btn btn-outline-success btn-lg">View More</a>
</div>
<div class="text-center my-4">
  <button id="back-to-top" class="btn btn-sm btn-outline-secondary">Back To Top</button>
</div>

  <script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
    const campgrounds = { features: <%- JSON.stringify(campgrounds)%> };
  </script>
  <script src="/javascripts/clusterMap.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="/javascripts/pagination.js"></script>
<script src="/javascripts/backtotop.js"></script>
