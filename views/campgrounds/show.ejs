<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/stylesheets/stars.css" />
<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6">
      <div class="card mb-3">
        <div id="campgroundCarousel" class="carousel slide carousel-fade m-2">
          <div class="carousel-inner">
            <% campground.images.forEach((img, i) => { %>
            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
              <img
                crossorigin="anonymous"
                src="<%= img.show %>"
                class="d-block w-100"
                alt=""
              />
            </div>
            <% }) %>
          </div>
          <% if(campground.images.length > 1) {%>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#campgroundCarousel"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#campgroundCarousel"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
          <% } %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= campground.title %></h5>
          <p class="card-text"><%= campground.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-secondary">
            <%= campground.location %>
          </li>
          <li class="list-group-item">â‚¬<%= campground.price %>/night</li>
        </ul>
        <% if(currentUser && campground.author.equals(currentUser._id)) {%>
        <div class="card-body text-center">
          <div class="row">
            <div class="col">
              <a
                class="card-link btn btn-info col-8"
                href="/campgrounds/<%= campground._id %>/edit"
                >Edit</a
              >
            </div>
            <div class="col">
              <form
                class="d-inline"
                action="/campgrounds/<%= campground._id %>?_method=DELETE"
                method="POST"
              >
                <button class="btn btn-danger col-8">Delete</button>
              </form>
            </div>
          </div>
        </div>
        <% } %>
        <div class="card-footer text-secondary">
          <i>Submitted by </i><%= campground.author.username %> <i>on</i>
          <%=campground.createdAt.toGMTString() %>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div id="map" class="mb-3"></div>
      <% for(let review of campground.reviews) { %>
      <div class="card mb-3">
        <div class="card-body">
          <div class="row">
            <div class="col-10">
              <h5
                class="starability-result card-title mb-3"
                data-rating="<%= review.rating %>"
              >
                Rated: <%= review.rating %> stars
              </h5>
            </div>
            <div class="col-2 text-center">
              <form
                action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
                method="POST"
              >
                <% if (currentUser && review.author.equals(currentUser._id)) {
                %>
                <button class="btn btn-sm btn-danger col-8">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    fill="currentColor"
                    class="bi bi-trash"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"
                    />
                    <path
                      d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"
                    />
                  </svg>
                </button>
                <% } %>
              </form>
            </div>
          </div>
          <h6 class="card-subtitle mb-2 text-secondary">
            <%= review.author.username %> <i>wrote</i>
          </h6>
          <p class="card-text"><%= review.body %></p>
        </div>
      </div>
      <% } %>
      <h4>Leave a Review</h4>
      <form
        action="/campgrounds/<%= campground._id %>/reviews"
        method="POST"
        class="mb-3 validated-form"
        novalidate
      >
        <div class="mb-3">
          <fieldset class="starability-growRotate">
            <h5>Rating:</h5>
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="0"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3">
          <textarea
            class="form-control"
            name="review[body]"
            id="body"
            cols="30"
            rows="3"
            required
            placeholder="Write a review..."
          >
<%= review %></textarea
          >
        </div>
        <div class="text-center">
          <button class="btn btn-success col-4">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campground = <%- JSON.stringify(campground)%>;
</script>

<script src="/javascripts/showMap.js"></script>
