<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <div class="row">
    <h1 class="text-center">Edit Boulder Gym</h1>
    <div class="col-md-6 offset-md-3">
      <form
        class="validated-form"
        action="/gyms/<%=gym._id%>?_method=PUT"
        method="POST"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input
            class="form-control"
            type="text"
            name="gym[title]"
            id="title"
            value="<%= gym.title %>"
            required
          />
        </div>

        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input
            class="form-control"
            type="text"
            name="gym[location]"
            id="location"
            value="<%= gym.location %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="formFileMultiple" class="form-label">Add Image(s)</label>
          <input
            class="form-control"
            type="file"
            id="formFileMultiple"
            name="image"
            multiple
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">â‚¬</span>
            <input
              type="text"
              class="form-control"
              placeholder="0.00"
              aria-label="price"
              aria-describedby="price-label"
              name="gym[price]"
              id="price"
              value="<%= gym.price %>"
              required
            />
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea
            class="form-control"
            type="text"
            name="gym[description]"
            id="description"
            required
          >
<%= gym.description %></textarea
          >
        </div>
        <div class="mb-3">
          <div class="row g-1">
            <% gym.images.forEach(function(img, i) { %>
            <div class="col-3">
              <img src="<%= img.thumbnail %>" alt="" class="img-thumbnail" />
            </div>
            <div class="col-1 form-check ml-1">
              <input
                class="form-check-input"
                type="checkbox"
                id="image-<%= i %>"
                name="deleteImages[]"
                value="<%= img.filename %>"
              />
              <label for="image-<%= i %>">&#128465;</label>
            </div>
            <%}) %>
          </div>
        </div>
        <div class="mb-3 text-center">
          <button class="btn btn-info">Update Boulder Gym</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/javascripts/maxUpload.js"></script>
